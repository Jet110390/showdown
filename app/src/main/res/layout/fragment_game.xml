<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wtp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/silhouetteIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/silhouetteIv"
        android:layout_width="250dp"
        android:layout_height="250dp"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toBottomOf="@id/gameTv"
        app:layout_constraintBottom_toTopOf="@id/radioBtnBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#000000"/>
    <RadioGroup
        android:id="@+id/radioBtnBox"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:layout_constraintTop_toBottomOf="@id/silhouetteIv"
        app:layout_constraintBottom_toTopOf="@id/gameSubmitBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RadioButton
            android:id="@+id/radioBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="option1"/>
        <RadioButton
            android:id="@+id/radioBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="option2"/>
        <RadioButton
            android:id="@+id/radioBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="option3"/>
        <RadioButton
            android:id="@+id/radioBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="option4"/>
    </RadioGroup>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/gameSubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        app:layout_constraintTop_toBottomOf="@id/radioBtnBox"
        app:layout_constraintBottom_toTopOf="@id/gameBackBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:enabled="false"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/gameBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintTop_toBottomOf="@id/gameSubmitBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>